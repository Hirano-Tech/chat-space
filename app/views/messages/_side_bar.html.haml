.side_bar
  .side_bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %p.top-items__icons
        = link_to new_group_path, class: "top-items__icons--btn-edit" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "top-items__icons--btn-setting" do
          = icon('fas', 'cog')

  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          %p.group__group-name
            = group.name
          %p.group__latest-message
            = group.show_last_message